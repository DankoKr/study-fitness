@page
@model Study_Fitness.Pages.BMIModel
@{
	ViewData["Title"] = "BMI";
}

<h1>BMI Calculator</h1>

@if(Model.hasData)
{
	<p>Your BMI is @Model.result !</p>
}


<form method="post">
	<input type="text" id="sex" name="sex" placeholder="your sex"/>
	<input type="text" id="age" name="age" placeholder="your age" />
	<input type="text" id="height" name="height" placeholder="your height" />
	<input type="text" id="weight" name="weight" placeholder="your weight"/><br />

	<br />
	<input type="submit" value="Submit" />
</form>