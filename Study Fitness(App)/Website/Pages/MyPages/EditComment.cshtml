@page
@model Website.Pages.MyPages.EditCommentModel
@{
    ViewData["Title"] = "Edit Comment";
}

<h1>Edit Comment</h1>

@if (Model.Error.Length > 0)
{
    <div class="row mb-3">
        <div class="col-sm-9">
            <div class='alert alert-warning alert-dismissible fade show' role='alert'>
                <strong>@Model.Error</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        </div>
    </div>
}

<h3>Current data</h3>
<p>Title: @Model.selectedC.Title</p>
<p>Rating: @Model.selectedC.Rating</p>
<p>Feedback: @Model.selectedC.Description</p>


<form method="post">
    <input type="hidden" name="name" value="@Model.selectedC.Title" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Feedback</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="description" value="@Model.NewDescription" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Rating</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="rating" value="@Model.NewRating" />
        </div>
    </div>


    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }