@page
@model Website.Pages.MyPages.EditExercisePageModel
@{
}

<h1>Edit Exercise</h1>

@if (Model.Error.Length > 0)
{
    <div class="row mb-3">
        <div class="col-sm-9">
            <div class='alert alert-warning alert-dismissible fade show' role='alert'>
                <strong>@Model.Error</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        </div>
    </div>
}

<h3>Current data</h3>
<p>Name: @Model.selectedEx.Name</p>
<p>Difficulty: @Model.selectedEx.Difficulty</p>
<p>Reps: @Model.selectedEx.RepRange</p>
<p>Weight: @Model.selectedEx.Weight</p>


<form method="post">
    <input type="hidden" name="name" value="@Model.selectedEx.Name" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Difficulty</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="difficulty" value="@Model.NewDifficulty" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">RepRange</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="repRange" value="@Model.NewRepRange" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Weight</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="weight" value="@Model.NewWeight" />
        </div>
    </div>

    @if (Model.Message.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.Message</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                </div>
            </div>
        </div>
    }


    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }