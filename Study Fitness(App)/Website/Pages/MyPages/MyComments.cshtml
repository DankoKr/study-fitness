@page
@model Website.Pages.MyPages.MyCommentsModel
@{
	ViewData["Title"] = "My Comments";
}

<h1 class="comment">My Comments</h1>
<div class="column-row-comment">
    @if (Model.myComments.GetComments().Count() > 0)
    {
        @foreach (var comment in Model.myComments.GetComments())
        {
            <div class="column-container-comment">
                <div>
                    <p>@comment.Title</p>
                    <p>Rating: @comment.Rating/5</p>
                    <p>@comment.Description</p>
                    <a class="btn btn-danger btn-sm" href="/MyPages/DeleteComment?name=@comment.Title">Delete</a>
                    <a class="btn btn-danger btn-sm" href="/MyPages/EditComment?name=@comment.Title">Edit</a>
                </div>
            </div>

        }
    }
    else
    {
        <p>No reviews</p>
    }
</div>
