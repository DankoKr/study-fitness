@page
@model Website.Pages.MyPages.LoginV2Model
@{
    ViewData["Title"] = "MyAccount";
}

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <h1>Login Form</h1>
                <p> @ViewData["LoginMessage"]</p>
                <form method="post">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <!-- Username input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" asp-for="user.Username">Username</label>
                        <input class="form-control form-control-lg" asp-for="user.Username" />
                        <span class="text-danger" asp-validation-for="user.Username"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" asp-for="user.Password">Password</label>
                        <input class="form-control form-control-lg" asp-for="user.Password" />
                        <span class="text-danger" asp-validation-for="user.Password"></span>
                    </div>
                    
                    <label asp-for="KeepMeLoggedIn">Keep me logged in</label>
                    <input asp-for="KeepMeLoggedIn" />

                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <a asp-page="/MyPages/CreateAccount">No account?</a>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</>

                </form>
                
            </div>
        </div>
    </div>
</section>