@page
@model Website.Pages.MyPages.AddCardioModel
@{
    ViewData["Title"] = "Create Cardio";
}

<h1>Create Cardio</h1>

@if (Model.Error.Length > 0)
{
    <div class="row mb-3">
        <div class="col-sm-9">
            <div class='alert alert-warning alert-dismissible fade show' role='alert'>
                <strong>@Model.Error</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        </div>
    </div>
}

<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.Name" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Difficulty</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="difficulty" value="@Model.Difficulty" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">RepRange</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="repRange" value="@Model.Calories" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">PictureURL</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="pictureURL" value="@Model.PictureUrl" />
        </div>
    </div>


    @if (Model.Message.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.Message</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                </div>
            </div>
        </div>
    }


    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }